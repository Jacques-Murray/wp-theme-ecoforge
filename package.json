{
  "name": "ecoforge",
  "version": "1.0.0",
  "description": "A production-ready WordPress theme for EcoForge.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm:watch:css\"",
    "build": "cross-env NODE_ENV=production postcss src/input.css -o style.css --minify",
    "watch:css": "postcss src/input.css -o style.css --watch"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss"
  ],
  "author": "Jacques Murray",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.15"
  }
}